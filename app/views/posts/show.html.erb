<div id="postListing">
	<div style="text-decoration: none; color: #3c2415; font-size: x-large; font-style: italic;"><%= @post.name %>
	<% if admin? %>
		| <%= link_to 'Edit', edit_post_path(@post), :class=>'admin' %>
	<% end %>
	</div>
	<span><%= @post.blurb %></span><br /><br />
		<%= render :partial => "/posts/item_list", :locals => {:post => @post} %>
	<span><%== @post.description %></span>
	<p><%= image_tag('/assets/postdivider.png')%></p>
</div>

