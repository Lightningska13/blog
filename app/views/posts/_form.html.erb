<div id="postListing">
	<%= form_for(@post) do |f| %>
	  <% if @post.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

	      <ul>
	      <% @post.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>
	  <div class="field">
	    <%= f.label :name %><br />
	    <%= f.text_field :name %>
	  <br />
	  <br />
	  </div>
	  <div class="field">
	    <%= f.label :blurb %><br />
	    <%= f.text_area :blurb, :rows => 4, :cols => 60 %>
	  <br />
	  <br />
	  </div>
	  <div class="field">
	    <%= f.label :description %><br />
	   	<%= f.text_area :description, :toolbar=>'Basic', :width=>'400px', :height=>'200px' %>
	  <br />
	  <br />
	  </div>
	  <div class="field">
	   <% if @postpic %>
			<%= image_tag @post.pic.url(:medium) %> <br />
			<label class="instructions"><input type="checkbox" name="delete_image" value="1" /> Check to remove Picture 1</label>
	    <br />
	   <% end %>
		<% if @postpic2 %>
			<%= image_tag @post.pic2.url(:medium) %> <br />
			<label class="instructions"><input type="checkbox" name="delete_image" value="1" /> Check to remove Picture 2</label>
	    <br />
		<% end %>
		<% if @postpic3 %>
			<%= image_tag @post.pic3.url(:medium) %> <br />
			<label class="instructions"><input type="checkbox" name="delete_image" value="1" /> Check to remove Picture 3</label>
	    <br />
		<% end %>
		<% if @postpic4 %>
			<%= image_tag @post.pic4.url(:medium) %> <br />
			<label class="instructions"><input type="checkbox" name="delete_image" value="1" /> Check to remove Picture 4</label>
	    <br />
		<% end %>
		<br />
	   <%= f.label :pic, "Post Picture 1" %>  
	   <%= f.file_field :pic %> <br /><br />
	   <%= f.label :pic2, "Post Picture 2" %>  
	   <%= f.file_field :pic2 %> <br /><br />
	   <%= f.label :pic3, "Post Picture 3" %>  
	   <%= f.file_field :pic3 %> <br /><br />
	   <%= f.label :pic4, "Post Picture 4" %>  
	   <%= f.file_field :pic4 %>
	  <br />
	  <br />
	  </div>
	  <div class="field">
	  <%= f.label 'Category' %><br />
			<%= f.collection_select(:post_cat_id, @post_cats, :id, :cat_name, :prompt => true) %>
	  </div>
	  <div class="actions">
	    <br /><%= f.submit %>
	  </div>
	<% end %>
</div>
