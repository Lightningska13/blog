<div id="postListing">
	<h1>Recent <%= @post_cat.cat_name %> Posts</h1>
	<% if @posts.present? %>
		<% @posts.each do |post| %>
			<i><%= link_to post.name, post %></i><br />
				<span><%= post.blurb %></span><br /><br />
	<div id="postImages">
		<%= image_tag(post.pic.url(:large)) %>
		<%= image_tag(post.pic2.url(:large)) %>
		<%= image_tag(post.pic3.url(:large)) %>
		<%= image_tag(post.pic4.url(:large)) %>
	</div><br />
	<span><%= post.description %></span>
	<p><%= image_tag('/assets/postdivider.png') %></p>
		<% end %>
	<% end %>
</div>
