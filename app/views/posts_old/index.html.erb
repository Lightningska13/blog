<h1>Listing posts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Blurb</th>
    <th>Post cat</th>
    <th>Pic file name</th>
    <th>Pic file size</th>
    <th>Pic content type</th>
    <th>Pic2 file name</th>
    <th>Pic2 file size</th>
    <th>Pic2 content type</th>
    <th>Pic3 file name</th>
    <th>Pic3 file size</th>
    <th>Pic3 content type</th>
    <th>Pic4 file name</th>
    <th>Pic4 file size</th>
    <th>Pic4 content type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= post.description %></td>
    <td><%= post.blurb %></td>
    <td><%= post.post_cat_id %></td>
    <td><%= post.pic_file_name %></td>
    <td><%= post.pic_file_size %></td>
    <td><%= post.pic_content_type %></td>
    <td><%= post.pic2_file_name %></td>
    <td><%= post.pic2_file_size %></td>
    <td><%= post.pic2_content_type %></td>
    <td><%= post.pic3_file_name %></td>
    <td><%= post.pic3_file_size %></td>
    <td><%= post.pic3_content_type %></td>
    <td><%= post.pic4_file_name %></td>
    <td><%= post.pic4_file_size %></td>
    <td><%= post.pic4_content_type %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

